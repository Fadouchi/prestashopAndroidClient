<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <View android:background="#10000000" android:layout_width="match_parent" android:layout_height="1dp"/>
    <RelativeLayout android:gravity="center_vertical" android:id="@+id/parentCategory" android:layout_width="wrap_content" android:layout_height="@dimen/category_grid_item">
        <ImageView android:id="@+id/backgound" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="centerCrop"/>
        <View android:background="@drawable/overlay2" android:layout_width="match_parent" android:layout_height="match_parent"/>
        <RelativeLayout android:gravity="center_vertical" android:padding="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
            <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_toRightOf="@+id/icon" android:layout_centerHorizontal="true" android:layout_centerVertical="true">
                <TextView android:textSize="16sp" android:textColor="#fff" android:id="@+id/text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Category Name" android:singleLine="true"/>
                <TextView android:textSize="14sp" android:textColor="#99ffffff" android:id="@+id/subtext" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="54 products"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <View android:background="#10000000" android:layout_width="match_parent" android:layout_height="1dp"/>
</LinearLayout>
