<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent">
    <ListView android:id="@+id/listView" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
        <ImageView android:id="@+id/icon" android:layout_width="72dp" android:layout_height="72dp" android:src="@drawable/ic_add_grey600_48dp" android:layout_centerHorizontal="true"/>
        <TextView android:textSize="20sp" android:textStyle="bold" android:id="@+id/helptext" android:padding="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="No Address Found" android:layout_below="@+id/icon"/>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Add Address" android:layout_below="@+id/helptext" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</RelativeLayout>
