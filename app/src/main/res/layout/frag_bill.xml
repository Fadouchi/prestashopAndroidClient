<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="#000" android:id="@+id/title" android:padding="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Your Bill" android:layout_centerHorizontal="true"/>
    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/toolbar" android:layout_centerInParent="true">
        <LinearLayout android:orientation="vertical" android:id="@+id/bill" android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <RelativeLayout android:padding="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="16sp" android:paddingLeft="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Total Amount" android:layout_alignParentLeft="true"/>
                <TextView android:textSize="16sp" android:id="@+id/total" android:paddingRight="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Rs.00" android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <RelativeLayout android:padding="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="16sp" android:paddingLeft="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Delivery Charges" android:layout_alignParentLeft="true"/>
                <TextView android:textSize="16sp" android:id="@+id/deliverycharges" android:paddingRight="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Rs.00" android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/discount_layout" android:padding="8dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="16sp" android:paddingLeft="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Discount" android:layout_alignParentLeft="true"/>
                <TextView android:textSize="16sp" android:id="@+id/discount" android:paddingRight="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Rs.00" android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp">
                <View android:background="#99000000" android:layout_width="match_parent" android:layout_height="1dp" android:layout_alignParentTop="true"/>
                <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="#000" android:paddingLeft="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_marginBottom="16dp" android:text="Amount Payable" android:layout_alignParentLeft="true"/>
                <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="#000" android:id="@+id/amount_payable" android:paddingRight="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_marginBottom="16dp" android:text="Rs.00" android:layout_alignParentRight="true"/>
                <View android:background="#99000000" android:layout_width="match_parent" android:layout_height="1dp" android:layout_below="@+id/amount_payable"/>
            </RelativeLayout>
            <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/share_layout" android:background="#3b5998" android:padding="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp">
                <TextView android:textSize="22sp" android:textStyle="bold" android:textColor="#fff" android:gravity="center" android:id="@+id/promoText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Get 5% Discount" android:layout_centerInParent="true"/>
                <TextView android:textSize="16sp" android:textColor="#fff" android:gravity="center" android:id="@+id/subtext" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Click here and share with your friends" android:layout_centerInParent="true"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
