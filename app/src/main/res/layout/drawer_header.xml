<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/nav_header_container" android:background="@color/colorPrimary" android:layout_width="match_parent" android:layout_height="140dp" android:layout_alignParentTop="true">
        <View android:background="#50000000" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent" android:onClick="openMyProfile"/>
        <com.pkmmte.view.CircularImageView android:id="@+id/profile_pic" android:layout_width="64dp" android:layout_height="64dp" android:layout_marginLeft="16dp" android:layout_marginTop="16dp" android:layout_marginBottom="12dp" android:src="@drawable/no_pic" app:border="true" app:border_color="#eeeeee" app:border_width="0dp" app:shadow="true"/>
        <TextView android:textSize="13sp" android:textStyle="bold" android:textColor="#ffffff" android:id="@+id/username" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:text="Ayush Mehre" android:layout_below="@+id/profile_pic"/>
        <TextView android:textSize="13sp" android:textColor="#99ffffff" android:id="@+id/email" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:text="ayushmehre@gmail.com" android:layout_below="@+id/username"/>
    </RelativeLayout>
</RelativeLayout>
