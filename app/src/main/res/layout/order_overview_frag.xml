<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="#000" android:gravity="center" android:id="@+id/title3" android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Final OverView" android:layout_centerHorizontal="true"/>
    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_above="@+id/placeOrder" android:layout_below="@+id/title3">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <View android:background="#10000000" android:layout_width="match_parent" android:layout_height="1dp"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/bill" android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <RelativeLayout android:padding="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="16sp" android:paddingLeft="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Total Amount" android:layout_alignParentLeft="true"/>
                    <TextView android:textSize="16sp" android:id="@+id/total" android:paddingRight="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Rs.00" android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <RelativeLayout android:padding="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="16sp" android:paddingLeft="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Delivery Charges" android:layout_alignParentLeft="true"/>
                    <TextView android:textSize="16sp" android:id="@+id/deliverycharges" android:paddingRight="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Rs.00" android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <RelativeLayout android:id="@+id/discount_layout" android:padding="8dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="16sp" android:paddingLeft="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Discount" android:layout_alignParentLeft="true"/>
                    <TextView android:textSize="16sp" android:id="@+id/discount" android:paddingRight="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Rs.00" android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp">
                    <View android:background="#99000000" android:layout_width="match_parent" android:layout_height="1dp" android:layout_alignParentTop="true"/>
                    <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="#000" android:paddingLeft="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_marginBottom="16dp" android:text="Amount Payable" android:layout_alignParentLeft="true"/>
                    <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="#000" android:id="@+id/amount_payable" android:paddingRight="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_marginBottom="16dp" android:text="Rs.00" android:layout_alignParentRight="true"/>
                    <View android:background="#99000000" android:layout_width="match_parent" android:layout_height="1dp" android:layout_below="@+id/amount_payable"/>
                </RelativeLayout>
            </LinearLayout>
            <View android:background="#10000000" android:layout_width="match_parent" android:layout_height="1dp"/>
            <RelativeLayout android:id="@+id/address_layout" android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="#000" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="4dp" android:text="Address"/>
                <TextView android:id="@+id/line1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Address Line1" android:layout_below="@+id/title"/>
                <TextView android:id="@+id/line2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Address Line2" android:layout_below="@+id/line1"/>
                <TextView android:id="@+id/code" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="PinCode" android:layout_below="@+id/line2"/>
            </RelativeLayout>
            <View android:background="#10000000" android:layout_width="match_parent" android:layout_height="1dp"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/time_layout" android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="#000" android:id="@+id/title2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="4dp" android:text="Delivery Time"/>
                <TextView android:id="@+id/line1a" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Address Line1" android:layout_below="@+id/timeline"/>
            </LinearLayout>
            <View android:background="#10000000" android:layout_width="match_parent" android:layout_height="1dp"/>
        </LinearLayout>
    </ScrollView>
    <Button android:textSize="18sp" android:textStyle="bold" android:textColor="#fff" android:id="@+id/placeOrder" android:background="@color/colorPrimary" android:layout_width="match_parent" android:layout_height="?android:attr/actionBarSize" android:text="PLACE ORDER" android:layout_alignParentBottom="true"/>
</RelativeLayout>
