<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="#000" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="4dp" android:text="Address Title"/>
    <TextView android:id="@+id/line1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Address Line1" android:layout_below="@+id/title"/>
    <TextView android:id="@+id/line2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Address Line2" android:layout_below="@+id/line1"/>
    <TextView android:id="@+id/code" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="PinCode" android:layout_below="@+id/line2"/>
    <ImageView android:id="@+id/tick" android:visibility="gone" android:layout_width="28dp" android:layout_height="28dp" android:layout_marginRight="16dp" android:src="@drawable/tick" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
</RelativeLayout>
